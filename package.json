{
  "name": "hapi-starter",
  "version": "1.0.0",
  "description": "Hapi MongoDB starter",
  "main": "dist/index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha src/test/*.test.js --timeout 5000 --require babel-core/register || exit 0",
    "dev": "cross-env NODE_ENV=devlopment nodemon --watch src --exec babel-node -- src/index.js",
    "prebuild": "rimraf dist",
    "build": "babel -d ./dist ./src --ignore test,*.test.js",
    "start": "cross-env NODE_ENV=production node dist/index.js"
  },
  "keywords": [
    "node",
    "hapi",
    "mongodb"
  ],
  "author": "jorgemcdev",
  "license": "ISC",
  "dependencies": {
    "good": "^7.1.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "cross-env": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^3.2.0",
    "mongoose": "^4.9.4",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1"
  }
}
